{
    "compilerOptions": {
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "ES2022",
        "lib": [
            "es2019",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "outDir": "build",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/__tests__",
        "**/*.test.ts"
    ]
}